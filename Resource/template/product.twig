{% extends 'SalesReport/Resource/template/index.twig' %}

{% set report_title = '商品別集計' %}
{% set action = url('admin_plugin_sales_report_product') %}
{% set menus = ['admin_plugin_sales_report', 'admin_plugin_sales_report_product'] %}

{% block chart %}
    <script>
        var graphData = {{ graphData|raw }};
        window.onload = function() {
            var dataSet = graphData.datasets;
            graphData.datasets = [dataSet];
            //create pie chart
            if (graphData != null) {
                var config = {
                    type: 'pie',
                    data: graphData,
                    options: {
                        responsive: true,
                        tooltips: {
                            callbacks: {
                                label : function tooltipsRender(tooltipItem, graphData) {
                                    var index = tooltipItem.index;
                                    var tooltipData = graphData.datasets[0].data[index];
                                    var tooltipLabel = graphData.labels[index];
                                    return tooltipLabel + ' : ¥' + moneyFormat(tooltipData);
                                }
                            }
                        },
                        legend: {
                            position: 'bottom',
                            labels: {
                                fontSize: 8,
                                boxWidth: 10
                            }
                        }
                    }
                };
                var ctx = document.getElementById("chart").getContext("2d");
                new Chart(ctx, config);
            }
            //export csv
            $('#export-csv').click(function () {
                $("#product-table").tableToCSV();
            });
        };
    </script>
{% endblock %}

{% block option %}{% endblock %}

{% block table %}
    {% if app.request.method == 'POST' %}
        {% if rawData is not null %}
            <div class="row">
                <div class="box-header">
                    <a id="export-csv" class="btn btn-default pull-right" data-export="export">CSVダウンロード</a>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="box">
                        <div class="table_list">
                            <div class="table-responsive with-border">
                                <table class="table table-striped" id="product-table">
                                    <thead>
                                    <tr>
                                        <th>商品コード</th>
                                        <th>商品名</th>
                                        <th>購入件数(件)</th>
                                        <th>数量(個)</th>
                                        <th>単価(円)</th>
                                        <th>金額(円)</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for row in rawData %}
                                        <tr>
                                            <td>{{ row.ProductClass.code }}</td>
                                            {% if row.ProductClass.ClassCategory1 is not null %}
                                                {% if row.ProductClass.ClassCategory2 is not null %}
                                                    <td>{{ row.ProductClass.Product.name }} {{ row.ProductClass.ClassCategory1.name }} {{ row.ProductClass.ClassCategory2.name }}</td>
                                                {% else %}
                                                    <td>{{ row.ProductClass.Product.name }} {{ row.ProductClass.ClassCategory1.name }}</td>
                                                {% endif %}
                                            {% else %}
                                                <td>{{ row.ProductClass.Product.name }}</td>
                                            {% endif %}
                                            <td class="text-right">{{ row.time|number_format }}</td>
                                            <td class="text-right">{{ row.quantity|number_format }}</td>
                                            <td class="price-format text-right">
                                                {{ row.price|number_format }}
                                                <span class="hidden">{{ row.price|raw }}</span>
                                            </td>
                                            <td class="price-format text-right">
                                                {{ row.total|number_format }}
                                                <span class="hidden">{{ row.total|raw }}</span>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div><!-- /.box-body -->
                    </div><!-- /.box -->
                </div><!-- /.col -->
            </div>
        {% else %}
            <div class="row">
                <div class="col-md-12">
                    <div class="box">
                        <div class="box-header with-arrow">
                            <h3 class="box-title">集計期間にデータがありませんでした。</h3>
                        </div><!-- /.box-header -->
                    </div>
                </div>
            </div>
        {% endif %}
    {% endif %}
{% endblock %}
